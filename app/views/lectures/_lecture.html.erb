<% unless lecture.contract %>
    <div class="col-md-4">
      <div class="card_box">
        <div class="user_area clearfix">
          <% if lecture.user.avatar? %>
            <%= link_to image_tag(lecture.user.avatar.url,  class: "user_avatar"), user_path(lecture.user) %>
          <% else %>
            <%= link_to image_tag('no-image.png',  class: "user_avatar"), user_path(lecture.user) %>
            <% end %>
          <ul>
            <li>
              <%= link_to "#{lecture.user.name}", user_path(lecture.user), class: "user_name" %>
            </li>
            <li>
              <ul class="user_detail">
                <li class="star"><%= image_tag "rate_stars_60px/rate_stars_5.png",  width: "100/20" %>
                </li>
                <li class="rate"><span>13</span></li>
                <li class="skill"><span>R</span></li>
              </ul>
            </li>
          </ul>
        </div>
          <%= link_to lecture_path(lecture) do %>
            <div class="card_content">
              <h1><%= lecture.title %></h1><br>
              <ul class="box_list">
                <li class="radius_box">
                  <span>時間：<%= lecture.total_avarable_time %>h </span>
                </li>
                <li class="radius_box">
                  <span><%= lecture.charge %>円</span>
                </li>
              </ul><br>
              <p>対応方法 : Skype, チャット</p><br>
            <span><%= lecture.content %></span>
          </div>
        <% end %>
      </div>
    </div>
<% end %>

<% if false %>
<%= link_to "このレクチャーを見る", lecture_path(lecture) %>
<% end %>
