  <div class="card">

    <div class="user_info clearfix">
      <div class="avatar_side">
        <%= link_to image_tag(question.user.avatar, class: :avatar), user_path(question.user) %>
      </div>
      <div class="name_side">
        <%= link_to question.user.name, user_path(question.user), class: :name %><br>
        <%= image_tag "rate_stars_60px/rate_stars_#{Contract.question_review_rate_avarage(question.user_id)}.png", class: :stars %>
        <span class="rate_amount"><%= Contract.number_of_question_review(question.user_id) %></span>
      </div>
    </div>

    <hr>

    <%= link_to question_path(question) do %>
      <div class="card_contents">
        <h1><%= question.title %></h1>
        <ul class="box_lists clearfix">
          <li class="radius_box right_r">
            <span><%= question.reward %>円</span>
          </li>
        </ul>
        <p>対応方法 : Skype, チャット</p>
        <hr>
        <div class="text"><%= question.content %></div>
      </div>
    <% end %>

  </div>
